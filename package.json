{
  "name": "cloud-native-cap",
  "version": "1.0.0",
  "description": "Cloud Native CAP Project",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/audit-logging": "^5.0.0",
    "@sap/cds": "^5",
    "@sap/cds-dk": "^4.3.1",
    "@sap/hana-client": "^2.9.23",
    "@sap/xssec": "^3.2.2",
    "express": "^4",
    "passport": "^0.4.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.2",
    "sqlite3": "^5.0.2",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "start": "cds run",
    "build": "tsc && cds build"
  },
  "cds": {
    "odata": {
      "version": "v4"
    },
    "hana": {
      "deploy-format": "hdbtable"
    },
    "requires": {
      "db": {
        "kind": "sql",
        "model": "*"
      },
      "auth": {
        "strategy": "dummy"
      }
    },
    "build": {
      "target": "gen",
      "tasks": [
        {
          "src": "db",
          "for": "hana",
          "options": {
            "model": [
              "db",
              "srv"
            ]
          }
        },
        {
          "src": "srv",
          "for": "node-cf",
          "options": {
            "model": [
              "db",
              "srv",
              "app"
            ]
          }
        }
      ]
    }
  }
}
