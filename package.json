{
  "name": "cloud-native-cap",
  "version": "1.0.0",
  "description": "Cloud Native CAP Project",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@newdash/newdash": "^5.20.0",
    "@sap/audit-logging": "^5.3.0",
    "@sap/cds": "^5.6.4",
    "@sap/cds-dk": "^4.6.4",
    "@sap/hana-client": "^2.10.20",
    "@sap/xsenv": "^3.1.1",
    "@sap/xssec": "^3.2.11",
    "express": "^4.17.1",
    "passport": "^0.4.1",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.2.22",
    "@types/jest": "^27.0.3",
    "@types/redis": "^2.8.32",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "jest": "^27.4.3",
    "prettier": "^2.5.0",
    "sqlite3": "^5.0.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "scripts": {
    "start": "cds run",
    "build": "tsc && cds build",
    "test": "jest --runInBand",
    "coverage": "npm test -- --coverage --no-cache"
  },
  "cds": {
    "odata": {
      "version": "v4"
    },
    "hana": {
      "deploy-format": "hdbtable"
    },
    "requires": {
      "db": {
        "kind": "sql",
        "model": "*"
      },
      "auth": {
        "strategy": "dummy"
      }
    },
    "build": {
      "target": "gen",
      "tasks": [
        {
          "src": "db",
          "for": "hana",
          "options": {
            "model": [
              "db",
              "srv"
            ]
          }
        },
        {
          "src": "srv",
          "for": "node-cf",
          "options": {
            "model": [
              "db",
              "srv",
              "app"
            ]
          }
        }
      ]
    }
  }
}
